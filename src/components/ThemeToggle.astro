<input type="checkbox" id="theme__toggle" />
<label for="theme__toggle"></label>
<style>
	input[type="checkbox"] {
		height: 0;
		width: 0;
		visibility: hidden;
	}

	label {
		cursor: pointer;
		width: 26px;
		height: 20px;
		background: var(--clr-bg);
		display: inline-block;
		position: relative;
		outline: 1px solid;
		border-radius: 2px;
	}

	label:after {
		content: "";
		position: absolute;
		top: 2px;
		left: 2px;
		width: 10px;
		height: 16px;
		background: var(--clr-text);
		border-radius: 2px;
		transition: 0.3s;
	}

	input:checked + label {
		background: var(--clr-bg);
	}

	input:checked + label:after {
		left: calc(100% - 2px);
		transform: translateX(-100%);
	}
</style>

<style is:global>
	body.darkmode {
		--clr-bg: #121212;
		--clr-text: white;
	}
</style>
