<input type="checkbox" id="theme__toggle" />
<label for="theme__toggle"></label>
<style>
  input[type="checkbox"] {
    height: 0;
    width: 0;
    visibility: hidden;
  }

  label {
    cursor: pointer;
    width: 40px;
    height: 20px;
    backdrop-filter: blur(2px);
    display: inline-block;
    position: relative;
    outline: 1px solid;
    border-radius: 10px;
  }

  label:after {
    content: "";
    position: absolute;
    top: 2px;
    left: 2px;
    width: 16px;
    height: 16px;
    border: 1px solid var(--clr-text);
    border-radius: 8px;
    transition: 0.3s;
  }

  input:checked + label {
    background: var(--clr-bg);
  }

  input:checked + label:after {
    left: calc(100% - 2px);
    transform: translateX(-100%);
  }
</style>

<style is:global>
  body.darkmode {
    --clr-bg: #121212;
    --clr-text: white;
  }
</style>
